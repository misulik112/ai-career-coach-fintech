# AI Career Coach - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Configuration
# =============================================================================
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=500

# =============================================================================
# Anytype API
# =============================================================================
# Get from: Anytype Desktop > Settings > API > Generate Code
ANYTYPE_API_KEY=
ANYTYPE_SPACE_ID=

# =============================================================================
# Perplexity API (Optional - for web research)
# =============================================================================
# Get from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=

# =============================================================================
# OpenAI API (Optional - for backup LLM)
# =============================================================================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

# =============================================================================
# ChromaDB Configuration
# =============================================================================
CHROMA_DB_PATH=data/vector_db
CHROMA_COLLECTION_NAME=career_knowledge

# =============================================================================
# Cache Configuration
# =============================================================================
CACHE_DIR=data/cache
CACHE_TTL_DAYS=7

# =============================================================================
# File Paths
# =============================================================================
KNOWLEDGE_BASE_PATH=data/knowledge_base
OBSIDIAN_VAULT_PATH=data/obsidian_vault
ANYTYPE_CACHE_PATH=data/anytype_cache

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_OBSIDIAN_WATCHER=false
ENABLE_ANYTYPE_SYNC=false
ENABLE_CACHE=true

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/coach.log
